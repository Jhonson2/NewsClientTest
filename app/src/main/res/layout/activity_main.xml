<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dellc.newsclienttest.MainActivity">

  <android.support.v7.widget.Toolbar
      android:id="@+id/tool_bar"
      app:title="广交院实训"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_weight="1"
        android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#44000000"/>

    <!--底部选项卡-->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_01"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="新闻"
            android:textSize="12sp"
            android:padding="3dp"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/home_tab_01_normal"
            android:textColor="@color/tab_text_normal" />

        <RadioButton
            android:id="@+id/rb_02"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="阅读"
            android:textSize="12sp"
            android:padding="3dp"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/home_tab_02_normal"
            android:textColor="@color/tab_text_normal" />

        <RadioButton
            android:id="@+id/rb_03"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="视听"
            android:textSize="12sp"
            android:padding="3dp"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/home_tab_03_normal"
            android:textColor="@color/tab_text_normal" />

        <RadioButton
            android:id="@+id/rb_04"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="发现"
            android:textSize="12sp"
            android:gravity="center"
            android:padding="3dp"
            android:button="@null"
            android:drawableTop="@drawable/home_tab_04_normal"
            android:textColor="@color/tab_text_normal" />


        <RadioButton
            android:id="@+id/rb_05"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="设置"
            android:textSize="12sp"
            android:gravity="center"
            android:padding="3dp"
            android:button="@null"
            android:drawableTop="@drawable/home_tab_05_normal"
            android:textColor="@color/tab_text_normal" />

    </RadioGroup>
</LinearLayout>
